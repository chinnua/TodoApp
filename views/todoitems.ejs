<ul class="list-group list-group-flush">
    <% for(var i=0; i < listTodos.length; i++) { %>
        <li class="list-group-item">
            <div class="custom-control custom-checkbox">
                <% let checked = listTodos[i].status ==="Completed" ? "checked" : "" %>
                <input type="checkbox" class="custom-control-input" id="<%= listTodos[i]._id %>" onclick="toggleStatus(this);" <%= checked %>>
                
                <label class="custom-control-label" style="width: 95%" for="<%= listTodos[i]._id %>">
                    <%= listTodos[i].title %>
                </label>
                <span class="float-right" style="cursor: pointer"><i class="far fa-trash-alt" onclick="deleteTodo('<%= listTodos[i]._id %>');"></i></span>
            </div>
        </li>
        <% } %>
</ul>